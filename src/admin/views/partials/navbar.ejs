<div class="modal fade" id="profileModal" tabindex="-1" aria-labelledby="modalTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg custom-modal">

        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Admin Profile</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="driverForm" enctype="multipart/form-data">
                    <input type="hidden" id="driverId" name="driverId">
                    <div class="row mb-3">

                        <div class="col-md-12">
                            <label for="name" class="form-label">Name </label>
                            <input type="text" class="form-control" id="name" name="name" readonly
                                placeholder="Enter Name">
                        </div>

                        <div class="col-md-12">
                            <label for="email" class="form-label">Email </label>
                            <input type="email" class="form-control" id="email" name="email" readonly
                                placeholder="Enter email">
                        </div>
                    </div>

                    <div class="row mb-12">
                        <div class="col-md-12">
                            <label>Admin Type</label>
                            <select class="form-control" name="admin_type" id="adminType" disabled>
                                <option value="">Select Admin Type</option>
                                <option value="Admin">Admin</option>
                                <option value="Sub Admin">Sub Admin</option>
                            </select>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
<script>
    const adminName = "<%= session.admin?.name || '' %>";
    const adminEmail = "<%= session.admin?.email || '' %>";
    const admin_type = "<%= session.admin?.admin_type || '' %>";

    $(document).ready(function () {
        $('#profileModal').on('show.bs.modal', function () {
            $('#name').val(adminName);
            $('#email').val(adminEmail);
            $('#adminType').val(admin_type);
        });
    });
</script>