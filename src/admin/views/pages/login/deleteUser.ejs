<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete User</title>
    <link rel="icon" type="image/x-icon" href="/admin/images/Favicon.png">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- FontAwesome CSS (important fix) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        crossorigin="anonymous" />

    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <style>
        body {
            background-color: #f8f9fa;
        }

        .login-container {
            padding: 2rem;
            background: white;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .form-group i {
            position: absolute;
            right: 15px;
            top: 42px;
            cursor: pointer;
        }

        .body_login {
            background-image: url("https://onpoint-08042025.s3.ap-south-1.amazonaws.com/uploads/0b3f0f36-34cc-40ee-b6c0-8dfca9526fb5_truck-transporting-international-cargo-highway-sunrise-sunset-concept-trucking-industry-international-shipping-highway-transport-sunrise-sunset-views-cargo-transportation_918839-215978%20%282%29.webp");
            background-size: cover;
            background-repeat: no-repeat;
        }

        #togglePassword {
            position: absolute;
            top: 44%;
            right: 7px;
            transform: translateY(50%);
        }

        .adminLogo {
            width: 60%;
        }

        .btclr {
            background: #00258f;
        }
    </style>
</head>

<body>
    <div class="body_login">
        <div class="container d-flex align-items-center vh-100">
            <div class="row w-100">
                <div class="col-md-10">
                    <div class="row w-100">
                        <div class="col-lg-6 col-md-7 col-sm-12 login-container">
                            <h3 class="text-center mb-4">
                                <img class="img-responsive adminLogo" src="/admin/images/logo2.png" alt="logo">
                            </h3>

                            <form id="deleteUserForm">
                                <div class="form-group position-relative">
                                    <label for="numberForContact">Mobile Number<strong
                                            class="text-danger">*</strong></label>
                                    <input type="tel" class="form-control floatInput number" id="numberForContact"
                                        name="mobile" placeholder="Enter Mobile Number" minlength="10" maxlength="10"
                                        pattern="[0-9]{10}" required>
                                </div>

                                <div class="col-md-12 text-center">
                                    <button type="submit" class="btn btn-danger btn-block mt-4 w-100">
                                        Delete User
                                    </button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete User Script -->
    <script>
        $(document).ready(function () {
            $('#deleteUserForm').submit(function (event) {
                event.preventDefault();

                const mobile = $('#numberForContact').val().trim();

                if (!/^\d{10}$/.test(mobile)) {
                    alert("Please enter a valid 10-digit mobile number.");
                    return;
                }

                $.ajax({
                    type: 'POST',
                    url: '/login/delUser',
                    data: JSON.stringify({ mobile: mobile }),
                    contentType: 'application/json',
                    dataType: 'json',
                    success: function (data) {
                        alert(data.message || 'Delete operation completed.');
                    },
                    error: function (xhr, status, error) {
                        let message = xhr.responseJSON?.message || "Something went wrong!";
                        console.error("AJAX request failed:", status, error, xhr);
                        alert(message);
                    }
                });
            });
        });
    </script>
</body>


</html>