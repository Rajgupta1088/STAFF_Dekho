<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(135deg, #2491d0 0%, #79b542 100%);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-container {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
            overflow: hidden;
            max-width: 900px;
            width: 100%;
        }

        .login-left {
            padding: 20px 40px;
            border-right: 3px solid #79b542;
            background: aliceblue;
        }

        .login-right {
            background: #fff;
            padding: 0px;
            /* background-image: url(https://zetainstitute.com/public_html/front/images/free-demo.jpg); */
            /* height: 89vh; */
            background-position: left;
            background-repeat: no-repeat;
            background-size: cover;
            height: 90vh;
        }

        .login-right img {
            max-width: 250px;
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 8px;
        }

        .btn-primary {
            border-radius: 8px;
        }

        .google-btn {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 10px;
            background: #fff;
            cursor: pointer;
            font-size: 12px;
            font-weight: 700;
        }

        .google-btn img {
            height: 20px;
            margin-right: 8px;
        }

        .sleepNote {
            margin: 0;
            font-weight: bold;
            font-size: 18px;
        }

        .liginMailText {
            font-size: 14px;
        }

        .form-label {
            margin: 0px;
            font-weight: 500;
            font-size: 14px;
        }

        .login-right h5 {
            font-size: 14px;
            font-weight: 600;
            margin-bottom: 5px !important;
        }

        .login-right p {
            font-size: 12px;
            width: 70%;
            margin-left: auto !important;
            margin-bottom: 5px !important;
        }

        .rightAcaBtn {
            font-size: 10px;
            font-weight: 600;
            color: #000;
            border-color: #000;
        }

        .loginLogo {
            max-width: 46%;
            margin: 10px 0px;
        }

        @media screen and (max-width:767px) {
            .login-right {
                display: none;
            }
        }
    </style>
</head>

<body>
    <div class="login-container row">
        <div class="login-left col-md-6">
            <div class="text-center mb-2">
                <img class="img-fluid loginLogo" src="/admin/images/logo.png" alt="Logo">
            </div>

            <form id="loginForm">
                <div class="mb-3">
                    <label for="email" class="form-label">Email Address</label>
                    <input type="email" class="form-control" id="email" placeholder="Email Address">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Password">
                </div>

                <button type="submit" class="btn btn-primary w-100 mt-5" style="background-color:#2491d0;">Log
                    In</button>
            </form>
        </div>

        <div class="login-right col-md-6 text-end">
            <video width="100%" height="100%" autoplay muted loop playsinline style="filter: opacity(1);">
                <source src="/admin/images/staff_dekho.mp4" type="video/mp4">
            </video>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#loginForm').submit(function (event) {
                event.preventDefault(); // Prevent default form submission

                var formData = {
                    'email': $('#email').val(),
                    'password': $('#password').val(),
                };

                $.ajax({
                    type: 'POST',
                    url: '/login/checkLogin',
                    data: formData,
                    dataType: 'json',
                    encode: true,
                    success: function (data) {
                        console.log(data);
                        if (data.success) {
                            window.location.href = data.redirectUrl;
                        } else {
                            alert(data.message || 'Login failed. Please check your credentials.');
                        }
                    },
                    error: function (xhr, status, error) {
                        let message = xhr.responseJSON?.message || "Something went wrong!";
                        console.error("AJAX request failed:", status, error, xhr);
                        alert(message);
                    }
                });
            });
        });
    </script>
</body>

</html>