<link rel="stylesheet" href="/admin/css/websiteManagement/tracking.css">
<style>
    .trackingHeadding {
        color: #252223;
    }

    .btn-close-white {
        filter: none !important;
    }

    .custom-modal {
        max-width: 70%;
    }

    .bodyContentSection {
        width: calc(100% - 300px);
    }
</style>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold">ðŸ“¦ Vendor Management</h3>
        <div>
            <button class="btn btn-success me-2" id="downloadAllTrackingCsv">
                <i class="fas fa-download me-2"></i> Download CSV
            </button>
            <button class="btn btn-pink" data-bs-toggle="modal" data-bs-target="#trackingModal">
                <i class="fas fa-plus me-2"></i> Add Vendor
            </button>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table id="trackingTable" class="table table-bordered table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Phone Number</th>
                            <th>Email</th>
                            <th>Vendor Type</th>
                            <th>Business Name</th>
                            <th>Business Category</th>
                            <th>Address</th>
                            <th>Status</th>
                            <th>Estimate Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="trackingModal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="trackingModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg custom-modal">
        <div class="modal-content border-0 rounded-3">
            <div class="modal-header bg-pink text-white">
                <h5 class="modal-title trackingHeadding" id="trackingModalLabel">Add Vendor</h5>
                <button type="button" class="btn-close btn-close-white" onclick="window.location.reload()"
                    data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="trackingForm" enctype="multipart/form-data" novalidate>
                <div class="modal-body">
                    <input type="hidden" id="trackingId" name="id">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="name" class="form-label">Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="vendorName" name="name" required
                                placeholder="Enter Name">
                        </div>
                        <div class="col-md-6">
                            <label for="mobile" class="form-label">Mobile <span class="text-danger">*</span></label>
                            <input type="tel" class="form-control" id="mobile" name="mobile" required
                                placeholder="Enter Mobile">
                        </div>
                        <div class="col-md-6">
                            <label for="emailField" class="form-label">Email <span class="text-danger">*</span></label>
                            <input type="email" class="form-control" id="emailField" name="email" required
                                placeholder="Enter Email">
                        </div>
                        <div class="col-md-6 passwordDiv">
                            <label for="password" class="form-label">Password <span class="text-danger">*</span></label>
                            <input type="password" class="form-control" id="password" name="password" required
                                placeholder="Enter Password">
                        </div>
                        <div class="col-md-6">
                            <label for="business_name" class="form-label">Business Name <span
                                    class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="business_name" name="business_name" required
                                placeholder="Business Name">
                        </div>
                        <div class="col-md-6">
                            <label for="business_category" class="form-label">Business Category <span
                                    class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="business_category" name="business_category"
                                placeholder="Business Category" required>
                        </div>
                        <div class="col-md-6">
                            <label for="address" class="form-label">Address <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="address" name="address" required
                                placeholder="Enter Address">
                        </div>
                        <div class="col-md-6">
                            <label for="status1" class="form-label">Status <span class="text-danger">*</span></label>
                            <select class="form-select" id="status1" name="status" required>
                                <option value="">Select Status</option>
                                <option value="1">Active</option>
                                <option value="2">Inactive</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label>Vendor Type<strong class="text-danger">*</strong></label>
                            <select class="form-control" name="admin_type" id="admin_type">
                                <option value="">Select Vendor Type</option>
                                <option value="Vendor">Vendor</option>
                                <option value="Sub Vendor">Sub Vendor</option>
                            </select>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Driver Percentage Cut<strong
                                    class="text-danger">*</strong></label>
                            <input type="number" class="form-control" name="driverPercentageCut"
                                id="driverPercentageCut" min="0" max="100" placeholder="Enter Driver Percentage Cut">
                        </div>

                        <div id="permissionsSection">

                            <h5>Permissions<strong class="text-danger">*</strong></h5>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Module</th>
                                        <th><input type="checkbox" id="selectAllAdd"> Add</th>
                                        <th><input type="checkbox" id="selectAllEdit"> Edit</th>
                                        <th><input type="checkbox" id="selectAllDelete"> Delete</th>
                                        <th><input type="checkbox" id="selectAllExport"> Export</th>
                                    </tr>
                                </thead>
                                <tbody id="permissionsTable">
                                    <tr>
                                        <td>Dashboard
                                            <input type="hidden" class="url" value="dashboard" url="/dashboard">
                                        </td>
                                        <td><input type="checkbox" class="add"></td>
                                        <td><input type="checkbox" class="edit"></td>
                                        <td><input type="checkbox" class="delete"></td>
                                        <td><input type="checkbox" class="export"></td>
                                    </tr>



                                    <tr>
                                        <td>Manage Users
                                            <input type="hidden" class="url" value="manageUsers"
                                                url="/users/userManagement">
                                        </td>
                                        <td><input type="checkbox" class="add"></td>
                                        <td><input type="checkbox" class="edit"></td>
                                        <td><input type="checkbox" class="delete"></td>
                                        <td><input type="checkbox" class="export"></td>
                                    </tr>

                                    <tr>
                                        <td>Manage Drivers
                                            <input type="hidden" class="url" value="manageDrivers"
                                                url="/driver/driverManagement">
                                        </td>
                                        <td><input type="checkbox" class="add"></td>
                                        <td><input type="checkbox" class="edit"></td>
                                        <td><input type="checkbox" class="delete"></td>
                                        <td><input type="checkbox" class="export"></td>
                                    </tr>

                                    <tr>
                                        <td>Manage Vehicle
                                            <input type="hidden" class="url" value="manageVehicles"
                                                url="/vehicle/vehicleManagement">
                                        </td>
                                        <td><input type="checkbox" class="add"></td>
                                        <td><input type="checkbox" class="edit"></td>
                                        <td><input type="checkbox" class="delete"></td>
                                        <td><input type="checkbox" class="export"></td>
                                    </tr>

                                    <tr class="vendorDiv d-none">
                                        <td>Vendor Management
                                            <input type="hidden" class="url" value="vendorManagement"
                                                url="/vendor/vendorManagement">
                                        </td>
                                        <td><input type="checkbox" class="add"></td>
                                        <td><input type="checkbox" class="edit"></td>
                                        <td><input type="checkbox" class="delete"></td>
                                        <td><input type="checkbox" class="export"></td>
                                    </tr>
                                    <tr>
                                        <td>PTL Management
                                            <input type="hidden" class="url" value="ptlManagement"
                                                url="/ptlPackages/ptlPackages">
                                        </td>
                                        <td><input type="checkbox" class="add"></td>
                                        <td><input type="checkbox" class="edit"></td>
                                        <td><input type="checkbox" class="delete"></td>
                                        <td><input type="checkbox" class="export"></td>
                                    </tr>
                                    <tr>
                                        <td>FTL Management
                                            <input type="hidden" class="url" value="ftlManagement"
                                                url="/ftl/ftlManagement">
                                        </td>
                                        <td><input type="checkbox" class="add"></td>
                                        <td><input type="checkbox" class="edit"></td>
                                        <td><input type="checkbox" class="delete"></td>
                                        <td><input type="checkbox" class="export"></td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-pink w-100">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    let trackingTable;

    $(document).ready(function () {
        const isVendor = "<%= isVendor %>";
        const admin_type = "<%= admin_type %>";

        if ((isVendor == 0 && admin_type == "Admin")) {
            $('.rolediv').removeClass('d-none')
        }
        if ((isVendor == 1 && admin_type == "Vendor") || (isVendor == 0 && admin_type == "Admin")) {
            $('.vendorDiv').removeClass('d-none')
        }
        // Select All
        function selectAll(columnClass, selectAllId) {
            $(selectAllId).on("change", function () {
                $("." + columnClass).prop("checked", this.checked);
            });
        }

        selectAll("add", "#selectAllAdd");
        selectAll("edit", "#selectAllEdit");
        selectAll("delete", "#selectAllDelete");
        selectAll("export", "#selectAllExport");


        // Initialize DataTable
        trackingTable = $('#trackingTable').DataTable({
            processing: true,
            serverSide: true,
            ajax: {
                url: '/vendor/vendorList/',
                type: 'POST',
                data: function (d) {
                    d.searchname = $('#searchname').val();
                    d.mobile = $('#mobile').val();
                    d.email = $('#emailField').val();
                    d.status = $('#status1').val();
                }
            },
            columns: [
                {
                    data: null,
                    render: (data, type, row, meta) => meta.row + meta.settings._iDisplayStart + 1
                },
                { data: '_id' },
                { data: 'name' },
                { data: 'mobile' },
                { data: 'email' },
                { data: 'admin_type' },
                { data: 'business_name' },
                { data: 'business_category' },
                { data: 'address' },
                {
                    data: 'status',
                    render: function (data) {
                        const statusMap = {
                            1: { color: 'bg-success', text: 'Active' },
                            2: { color: 'bg-danger', text: 'Inactive' },
                        };
                        const status = statusMap[data] || { color: 'bg-secondary', text: 'Unknown' };
                        return `<span class="badge ${status.color}">${status.text}</span>`;
                    }
                },
                {
                    data: 'deliveryDate',
                    render: data => moment(data).format('YYYY-MM-DD HH:mm:ss')
                },
                {
                    data: null,
                    render: (data, type, row) => `
                        <button class="btn btn-sm btn-primary editBtn" data-id="${row._id}">Edit</button>
                        <button class="btn btn-sm btn-danger deleteBtn" data-id="${row._id}">Delete</button>`
                }
            ]
        });

        // Form submission
        $('#trackingForm').submit(function (e) {
            e.preventDefault();

            const id = $('#trackingId').val().trim();
            const name = $('#vendorName').val().trim();
            const mobile = $('#mobile').val().trim();
            const email = $('#emailField').val().trim();
            const password = $('#password').val().trim();
            const business_name = $('#business_name').val().trim();
            const business_category = $('#business_category').val().trim();
            const address = $('#address').val().trim();
            const status = $('#status1').val().trim();
            const admin_type = $('#admin_type').val().trim();
            const driverPercentageCut = $('#driverPercentageCut').val().trim();

            // Validation
            if (!name) return toastr.error('Please enter name', 'Error');
            if (!mobile) return toastr.error('Please enter mobile', 'Error');
            if (!email) return toastr.error('Please enter email', 'Error');
            if (!id && !password) return toastr.error('Please enter password', 'Error');
            if (!business_name) return toastr.error('Please enter business name', 'Error');
            if (!business_category) return toastr.error('Please enter business category.', 'Error');
            if (!address) return toastr.error('Please enter address', 'Error');
            if (!status) return toastr.error('Please select status.', 'Error');
            if (!admin_type) return toastr.error('Please select vendor type.', 'Error');
            if (!driverPercentageCut) return toastr.error('Please Enter Driver Percentage Cut.', 'Error');

            // const isSubVendor = admin_type === 'Sub Vendor';
            const isSubVendor = true;


            const anyChecked = $('input[type="checkbox"]:checked').length > 0;

            if (isSubVendor && !anyChecked) {
                return toastr.error('Please select at least one permission.', 'Error');
            }

            // Prepare actual data to send via FormData
            const formData = new FormData();
            formData.append('name', name);
            formData.append('mobile', mobile);
            formData.append('email', email);
            if (!id || password) formData.append('password', password); // only send password if needed
            formData.append('business_name', business_name);
            formData.append('business_category', business_category);
            formData.append('address', address);
            formData.append('status', status);
            formData.append('admin_type', admin_type);
            formData.append('driverPercentageCut', driverPercentageCut);

            const permissions = [];

            $("#permissionsTable tr").each(function () {
                const row = $(this);
                const module = row.find(".url").val();
                const url = row.find(".url").attr("url");

                if (!module || !url) return; // skip empty rows

                let permission = {
                    module,
                    url,
                    add: true,
                    edit: true,
                    delete: true,
                    export: true
                };

                if (isSubVendor) {
                    permission = {
                        module,
                        url,
                        add: row.find(".add").prop("checked"),
                        edit: row.find(".edit").prop("checked"),
                        delete: row.find(".delete").prop("checked"),
                        export: row.find(".export").prop("checked"),
                    };
                }

                permissions.push(permission);
            });

            formData.append('permissions', JSON.stringify(permissions));

            const actionUrl = id ? `/vendor/editVendor/${id}` : '/vendor/addVendor';

            $.ajax({
                url: actionUrl,
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function () {
                    $('#trackingModal').modal('hide');
                    $('#trackingForm')[0].reset();
                    $('#trackingModalLabel').text('Add Vendor');
                    window.location.reload();
                    toastr.success('Vendor saved successfully!', 'Success');
                },
                error: function (xhr) {
                    const errorMsg = xhr.responseJSON?.message || 'Failed to save vendor.';
                    toastr.error(errorMsg, 'Error');
                }
            });
        });


        // Edit
        $(document).on('click', '.editBtn', function () {
            const id = $(this).data('id');
            $.ajax({
                url: '/vendor/get/' + id,
                type: 'GET',
                success: function (data) {
                    $('#trackingId').val(data._id);
                    $('#vendorName').val(data.name);
                    $('#mobile').val(data.mobile);
                    $('#emailField').val(data.email);
                    $('.passwordDiv').addClass('d-none');
                    $('#business_name').val(data.business_name);
                    $('#business_category').val(data.business_category);
                    $('#address').val(data.address);
                    $('#status1').val(data.status);
                    $('#admin_type').val(data.admin_type);
                    $('#driverPercentageCut').val(data.driverPercentageCut);

                    $('#permissionsTable input[type="checkbox"]').prop('checked', false);

                    // Populate Permissions Dynamically
                    if (data.permissions && Array.isArray(data.permissions)) {
                        data.permissions.forEach(permission => {
                            let module = permission.module;

                            // Find the correct row based on the module name
                            let row = $(`#permissionsTable tr:has(input[value="${module}"])`);

                            // Set the corresponding checkboxes
                            row.find('.add').prop('checked', permission.add);
                            row.find('.edit').prop('checked', permission.edit);
                            row.find('.delete').prop('checked', permission.delete);
                            row.find('.export').prop('checked', permission.export);
                        });
                    }
                    // alert(data.admin_type)
                    $('#trackingModalLabel').text('Edit Vendor');
                    $('#trackingModal').modal('show');
                }
            });
        });

        // Delete
        $(document).on('click', '.deleteBtn', function () {
            const id = $(this).data('id');
            if (confirm('Are you sure you want to delete this vendor?')) {
                $.ajax({
                    url: '/vendor/delete/' + id,
                    type: 'DELETE',
                    success: function () {
                        trackingTable.ajax.reload();
                        toastr.success('Vendor deleted successfully!');
                    },
                    error: function () {
                        toastr.error('Failed to delete vendor.');
                    }
                });
            }
        });

        // CSV Download
        $('#downloadAllTrackingCsv').click(function () {
            const params = new URLSearchParams({
                name: $('#searchname').val(),
                mobile: $('#mobile').val(),
                email: $('#emailField').val(),
                status: $('#status1').val()
            });
            window.location.href = '/vendor/downloadCsv?' + params.toString();
        });

        $('.btn-close').click(function () {
            $('#trackingForm')[0].reset();
            $('#trackingModalLabel').text('Add Vendor');
        });
        $('#driverPercentageCut').on('input', function () {
            let value = parseFloat($(this).val());

            if (isNaN(value)) return;

            // Clamp the value between 0 and 100
            if (value < 0) $(this).val(0);
            if (value > 100) $(this).val(100);
        });

    });
</script>