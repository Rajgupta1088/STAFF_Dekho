<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Driver Earning Report</title>

    
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <!-- DataTables CSS -->
    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet">

    <style>
        .btn-pink {
            background-color: #e91e63;
            color: white;
        }

        .btn-pink:hover {
            background-color: #c2185b;
        }

        .table th,
        .table td {
            vertical-align: middle;
            text-align: center;
        }

        .modal-title {
            font-weight: bold;
        }

        #editTabs {
            font-size: 14px;
        }

        .aproveSwitch {
            margin-left: 30% !important;
        }

        .custom-modal {
            max-width: 70%;
        }

        .modal-backdrop.show {
            opacity: 0.1;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="fw-bold">ðŸš› Driver Earning Report</h3>
            <!-- Optional: Add export or filter buttons here instead of Add Driver -->
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <table id="driverTable" class="table table-bordered table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Mobile</th>
                            <th>Driver % Cut</th>
                            <th>Driver Earning</th>
                            <th>Payout Status</th>
                            <th>Total</th>
                            <th>Initial</th>
                            <th>Final</th>
                            <th>Subtotal</th>
                            <th>Shipping</th>
                            <th>Handling</th>
                            <th>GST â‚¹</th>
                            <th>GST %</th>
                            <th>PrePay %</th>

                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="modal fade" id="payOutModal" tabindex="-1" aria-labelledby="modalTitle" aria-hidden="true">
        <div class="modal-dialog modal-lg custom-modal">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">Driver Bank Detail</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="bankDetailForm">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="accountHolderName" class="form-label">Account Holder Name</label>
                                <input type="text" class="form-control" id="accountHolderName" name="accountHolderName"
                                    placeholder="Enter Account Holder Name">
                            </div>
                            <div class="col-md-6">
                                <label for="accountNumber" class="form-label">Account Number</label>
                                <input type="text" class="form-control" id="accountNumber" name="accountNumber"
                                    placeholder="Enter Account Number">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="ifscCode" class="form-label">IFSC Code</label>
                                <input type="text" class="form-control" id="ifscCode" name="ifscCode"
                                    placeholder="Enter IFSC Code">
                            </div>
                            <div class="col-md-6">
                                <label for="bankName" class="form-label">Bank Name</label>
                                <input type="text" class="form-control" id="bankName" name="bankName"
                                    placeholder="Enter Bank Name">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="branch" class="form-label">Branch</label>
                            <input type="text" class="form-control" id="branch" name="branch"
                                placeholder="Enter Branch Name">
                        </div>

                        <!-- Optional Submit Button -->
                        <button type="submit" class="btn btn-primary w-100 payOutSubmit ">Transfer To Bank
                            Account</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>


    <script>
        $(document).ready(function () {
            const pathParts = window.location.pathname.split('/');
            const driverId = pathParts[pathParts.length - 1]; // Get last part of the URL

            if (!driverId) {
                alert("Driver ID missing in URL");
                // return;
            }

            $('#driverTable').DataTable({
                processing: true,
                serverSide: true,
                dom: 'lrtip',
                ajax: {
                    url: '/driver/driverEarningList',
                    type: 'POST',
                    data: { driverId }
                },
                columns: [
                    {
                        data: null,
                        render: function (data, type, row, meta) {
                            return meta.row + 1;
                        }
                    },
                    {
                        data: 'driverId.personalInfo.name',
                        defaultContent: '-',
                        orderable: false,

                    },
                    {
                        data: 'driverId.personalInfo.mobile',
                        defaultContent: '-',
                        orderable: false,

                    },

                    {
                        data: 'driverPercentageCut',
                        render: function (data) {
                            return `${data || 0}%`;
                        },
                        orderable: false,

                    },
                    {
                        data: 'driverEarning',
                        render: function (data) {
                            return `<strong class=" text-success">${data || 0}</strong>`;
                        },
                        orderable: false,

                    },
                    {
                        data: 'isDriverAmountPayout',
                        render: function (data) {
                            switch (data) {
                                case 1:
                                    return '<span class="badge bg-success">Paid</span>';
                                case 0:
                                    return '<span class="badge bg-warning text-dark">Pending</span>';
                                default:
                                    return '<span class="badge bg-secondary">Unknown</span>';
                            }
                        },
                        orderable: false,

                    },
                    { data: 'totalPayment' },
                    { data: 'prePayment' },
                    { data: 'postPayment' },
                    { data: 'subTotal' },
                    { data: 'shippingCost' },
                    { data: 'specialHandling' },
                    { data: 'gst' },
                    { data: 'gstPercentage' },
                    { data: 'prePaymentPercentage' },
                    {
                        data: null,
                        render: (data, type, row) => `
                            <button class="btn btn-sm btn-danger payOutModal"
                                    data-id='${row._id}'>
                                <i class="fas fa-dollar"></i><strong> PAY OUT</strong>
                            </button>

`                    }
                ]
            });

            $(document).on('click', '.payOutModal', function () {
                const pathParts = window.location.pathname.split('/');
                const driverId = pathParts[pathParts.length - 1]; // Get last part of the URL

                if (!driverId) {
                    alert("Driver ID missing in URL");
                    // return;
                }

                // if (!driverId) {
                //     toastr.error('Driver ID is missing.');
                //     return;
                // }

                $.ajax({
                    url: '/driver/bankDetail/' + driverId,
                    type: 'GET',
                    dataType: 'json',
                    success: function (data) {
                        if (data.success) {
                            const detail = data.data;
                            console.log(detail)
                            $('#accountHolderName')
                                .val(detail.accountHolderName || '')
                                .attr('readonly', true);

                            $('#accountNumber')
                                .val(detail.accountNumber || '')
                                .attr('readonly', true);

                            $('#ifscCode')
                                .val(detail.ifscCode || '')
                                .attr('readonly', true);

                            $('#bankName')
                                .val(detail.bankName || '')
                                .attr('readonly', true);

                            $('#branch')
                                .val(detail.branchName || '')
                                .attr('readonly', true);

                            // âœ… Open modal only if data is found


                            $('#payOutModal').modal('show');


                        } else {
                            toastr.warning(data.message || 'Bank detail not found.');
                        }
                    },
                    error: function () {
                        toastr.error('Failed to fetch bank details.');
                    }
                });
            });
            $(document).on('submit', '#bankDetailForm', function (e) {
                e.preventDefault(); // Corrected: properly using 'e'

                const pathParts = window.location.pathname.split('/');
                const driverId = pathParts[pathParts.length - 1];

                if (!driverId) {
                    alert("Driver ID missing in URL");
                    return;
                }

                $.ajax({
                    url: '/driver/transferToBankAccount/' + driverId,
                    type: 'GET', // Changed to POST as it's a money transfer
                    dataType: 'json',
                    success: function (data) {
                        if (data.success) {
                            toastr.success('Amount transferred successfully.');
                            // Optionally reset form or update UI
                        } else {
                            toastr.warning(data.message || 'Transfer failed.');
                        }
                    },
                    error: function () {
                        toastr.error('Failed to transfer amount.');
                    }
                });
            });



        });

    </script>
</body>

</html>