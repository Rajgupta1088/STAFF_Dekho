<script>
    $(document).ready(function () {

        // helper: confirm dialog using SweetAlert2
        function swalConfirm(message, callback) {
            Swal.fire({
                title: 'Confirm',
                text: message,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes'
            }).then((result) => {
                if (result.isConfirmed) callback();
            });
        }

        // Select All
        function selectAll(columnClass, selectAllId) {
            $(selectAllId).on("change", function () {
                $("." + columnClass).prop("checked", this.checked);
            });
        }

        selectAll("add", "#selectAllAdd");
        selectAll("edit", "#selectAllEdit");
        selectAll("delete", "#selectAllDelete");
        selectAll("export", "#selectAllExport");

        $("#adminType1").on("change", function () {
            if ($(this).val() === "Admin") {
                $("#permissionsSection").slideUp(200);
            } else {
                $("#permissionsSection").slideDown(200);
            }
        }).trigger("change");


        const userModal = new bootstrap.Modal(document.getElementById('addUserModal'));

        let table = $('#artistTable').DataTable({
            processing: true,
            serverSide: true,
            pageLength: 10,
            lengthMenu: [10, 25, 50, 100],
            scrollY: "400px",
            scrollCollapse: true,
            searching: false,
            ajax: {
                url: '/candidate/getCandidate',
                type: 'POST',
                data: function (d) {
                    d.name = $('#searchName').val();
                    d.email = $('#searchEmail').val();
                    d.gender = $('#searchGender').val();
                    d.education = $('#searchEducation').val();
                    d.work_status = $('#searchWorkStatus').val();
                },
            },
            columns: [
                {
                    data: null,
                    orderable: false,
                    render: (data, type, row, meta) => meta.row + meta.settings._iDisplayStart + 1
                },
                {
                    data: null,
                    render: (data) => data.personalDetails?.name || '-'
                },
                {
                    data: null,
                    render: (data) => data.personalDetails?.email || '-'
                },
                {
                    data: null,
                    render: (data) => data.personalDetails?.gender || '-'
                },
                {
                    data: null,
                    render: (data) => data.educationalDetails?.education || '-'
                },
                {
                    data: null,
                    render: (data) => data.basicDetails?.workStatus || '-'
                },
                {
                    data: null,
                    render: (data, type, row) => {
                        const isActive = row.status === 1;
                        return `
                            <button class="btn btn-sm toggleStatusBtn ${isActive ? 'btn-success' : 'btn-secondary'}" 
                                data-id="${row._id}" 
                                data-status="${row.status}">
                                ${isActive ? 'Active' : 'Inactive'}
                            </button>
                        `;
                    }
                },
                {
                    data: 'createdAt',
                    render: (data) => data ? new Date(data).toLocaleString() : '-'
                },
                {
                    data: null,
                    orderable: false,
                    render: (data, type, row) => `
                        <button class="btn btn-sm btn-primary me-2 editUserBtn" data-id='${row._id}'>
                            <i class="fas fa-edit"></i> Edit
                        </button>
                        <button class="btn btn-sm btn-danger delUserBtn" data-id='${row._id}'>
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    `
                }
            ],

            columnDefs: [
                { orderable: false, targets: [0, 7] }
            ]
        });
        $('#artistTable').on('click', '.toggleStatusBtn', function () {
            const candidateId = $(this).data('id');
            const currentStatus = $(this).data('status');
            const newStatus = currentStatus === 1 ? 2 : 1;

            $.ajax({
                url: '/candidate/updateCandidateStatus/' + candidateId,
                type: 'PATCH',
                data: { status: newStatus },
                dataType: "json",
                success: function (res) {
                    toastr.success('Status updated successfully!');
                    table.ajax.reload(null, false);
                },
                error: function (xhr, status, error) {
                    console.error("Error updating status:", status, error, xhr);
                    toastr.error('Failed to update status.', 'Error');
                }
            });
        });

        

        $('#artistTable').on('click', '.editUserBtn', function () {
            const id = $(this).data('id');
            $('#editCandidateModal').modal('show');
            $('#editCandidateModal form')[0].reset(); // Reset form inputs
            $('#driverApprovedToggle').prop('checked', false).removeAttr('data-id');
            $('#editCandidateId').val('');

            $.get(`/candidate/getCandidateById/${id}`, function (data) {
                const candidate = data.candidate;

                $('#editCandidateId').val(id);
                $('#driverApprovedToggle')
                    .prop('checked', candidate.status === 1)
                    .attr('data-id', candidate._id);

                /** ---------------- Personal Details ---------------- */
                $('#editName').val(candidate.personalDetails?.name);
                $('#editEmail').val(candidate.personalDetails?.email);
                if (candidate.personalDetails?.dob) {
                    $('#editDateOfBirth').val(moment(candidate.personalDetails.dob).format('YYYY-MM-DD'));
                }
                $('#editGender').val(candidate.personalDetails?.gender);
                $('#editMobileNo').val(candidate.personalDetails?.mobile);

                /** ---------------- Basic Details ---------------- */
                $('#editWorkStatus').val(candidate.basicDetails?.workStatus);
                $('#experienceYears').val(candidate.basicDetails?.experience?.year);
                $('#experienceMonths').val(candidate.basicDetails?.experience?.month);
                $('#editLocation').val(candidate.basicDetails?.currentLocation);
                $('#editSalary').val(candidate.basicDetails?.currentSalary);
                $('#editJoin').val(candidate.basicDetails?.availableToJoin);

                /** ---------------- Work Experience ---------------- */
                $('#editInstitutionName').val(candidate.workExperience?.institutionName);
                $('#editSubjectSpecialization').val(candidate.workExperience?.subjectSpecialization);
                $('#editDesignation').val(candidate.workExperience?.designation);
                $('#editGradesTaught').val(candidate.workExperience?.gradesTaught);
                $('#editJobType').val(candidate.workExperience?.jobType);
                $('#editAreYouWorking').val(candidate.workExperience?.areYouWorking);

                if (candidate.workExperience?.joiningDate) {
                    $('#joiningDate').val(moment(candidate.workExperience.joiningDate).format('YYYY-MM-DD'));
                }
                if (candidate.workExperience?.leavingDate) {
                    $('#leavingDate').val(moment(candidate.workExperience.leavingDate).format('YYYY-MM-DD'));
                }

                /** ---------------- Education ---------------- */
                $('#editEducation').val(candidate.educationalDetails?.education);
                $('#editDegree').val(candidate.educationalDetails?.degreeName);
                $('#editSubjectSpecialization').val(candidate.educationalDetails?.subjectSpecialization);
                $('#editPassingOutYear').val(candidate.educationalDetails?.yearOfPassout);
            });
        });


        $("#adminForm").on("submit", function (event) {
            event.preventDefault();
            let name = $("#adminName").val();
            let email = $("#adminEmail").val();
            let admin_type = $("#adminType1").val();

            let mobile = $("input[name='mobile']").val();
            let password = $("input[name='password']").val()
            let country_access = $("input[name='country_access']").prop("checked");
            let city_access = $("input[name='city_access']").prop("checked");

            if (!name) {
                toastr.error('Please Enter Name', 'Error');
                return;
            }
            if (!mobile) {
                toastr.error('Please Enter mobile', 'Error');
                return;
            }
            if (!email) {
                toastr.error('Please Enter Email', 'Error');
                return;
            } else if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) { // Simple email regex
                toastr.error('Enter a valid Email address.', 'Error');
                return;
            }
            if (!admin_type) {
                toastr.error('Please Select Admin Type', 'Error');
                return;
            }

            const anyChecked = $('#permissionsTable input[type="checkbox"]:checked').length > 0;

            if (admin_type == 'Sub Admin') {
                if (!anyChecked) {
                    toastr.error('Please select at least one permission.', 'Error');
                    return;
                }
            }


            let formData = {
                name: name,
                user_id: $("input[name='user_id']").val(),
                mobile: mobile,
                email: email,
                admin_type: admin_type,
                password: password,
                country_access: country_access,
                city_access: city_access,
                permissions: []
            };


            let adminType = $('#adminType1').val();

            if (adminType === "Sub Admin") {
                $("#permissionsTable tr").each(function () {
                    const row = $(this);
                    const module = row.find('.url').val();
                    const url = row.find('.url').attr('url');
                    const permission = {
                        module,
                        url,
                        add: row.find('.add').prop('checked'),
                        edit: row.find('.edit').prop('checked'),
                        delete: row.find('.delete').prop('checked'),
                        export: row.find('.export').prop('checked'),
                    };
                    formData.permissions.push(permission);
                });
            }


            if (adminType === "Admin") {
                $("#permissionsTable tr").each(function () {
                    let module = $(this).find(".url").val(); // Correctly fetch hidden input
                    let permission = {
                        module: module,
                        add: true,
                        edit: true,
                        delete: true,
                        export: true,
                        url: $(this).find(".url").attr("url"),
                    };
                    formData.permissions.push(permission);
                });

            }

            // Post request (Adjust URL accordingly)
            $.post("/roles/updateRoles", formData, function (response) {
                toastr.success('Admin saved successfully.', 'Success');

                $("#adminForm")[0].reset();
                $('.btn-close').click();
                table.ajax.reload();

            }).fail(function () {
                toastr.error('Error saving admin!');
            });
        });

        $('#artistTable').on('click', '.delUserBtn', function () {
            const buId = $(this).data('id');

            swalConfirm('Are you sure you want to delete this Candidate?', function () {
                $.ajax({
                    url: '/candidate/deleteCandidate/' + buId,
                    type: 'PATCH',
                    dataType: 'json',
                    success: function (response) {
                        table.ajax.reload();

                        if (response.success)
                            toastr.success(response.message, 'Success');
                        else
                            toastr.error(response.message, 'error');

                    },
                    error: function (xhr, status, error) {
                        console.error("Error deleting candidate:", status, error, xhr);
                        toastr.error('Error deleting candidate.', 'Error');
                    }
                });
            });
        });


        $('#searchBtn').on('click', function () {
            table.ajax.reload(); // Reload the DataTable, the search parameters are sent in the ajax.data function
        });

        $('#resetBtn').on('click', function () {
            $('#searchName').val('');
            $('#searchEmail').val('');
            $('#searchGender').val('');
            $('#searchEducation').val('');
            $('#searchWorkStatus').val('');
            table.ajax.reload(); // Reload to clear all filters
        });
    });
</script>